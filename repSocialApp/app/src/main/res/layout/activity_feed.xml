                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/RecipeName1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Lemon Soup"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/padding1_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text=""
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/rating1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:drawableLeft="@drawable/ic_baseline_star_24"
                            android:text="4.9 (249)"
                            android:textAlignment="viewEnd"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/user1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="\@florentino"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/padding1_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="" />

                        <TextView
                            android:id="@+id/preparation1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                            android:text="10 min"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/date1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            android:text="Friday, May 12 2022, 14:30" />

                        <TextView
                            android:id="@+id/difficulty1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:drawableLeft="@drawable/ic_baseline_signal_cellular_alt_24"
                            android:text="Medium"
                            android:textAlignment="textEnd" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tags1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#Lemon #Carrot #Vegetarian #Green #Healthy"
                        android:textAlignment="textStart" />


                    <androidx.appcompat.widget.AppCompatImageView
