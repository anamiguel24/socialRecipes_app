                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:drawableLeft="@drawable/ic_baseline_thumb_up_24"
                            android:text="190k"
                            android:textAlignment="center"
                            android:textSize="15dp" />

                        <TextView
